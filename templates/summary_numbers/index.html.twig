{% extends 'baseAdmin.html.twig' %}

{% block title %}
	{{ parent() }}Umiejetności
{% endblock %}

{% block body %}

	<div class="card-header">
		<i class="fas fa-table mr-1"></i>
		Tabelka Liczby Podsumowujace
		<a class="btn btn-info float-right" href="{{ path('admin_summary_numbers_new') }}">Dodaj Liczbę</a>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>Nazwa</th>
						<th>Procent</th>
						<th style='width: 20px'></th>
						<th style='width: 20px'></th>
					</tr>
				</thead>
				<tfoot>
					<tr>
						<th>Nazwa</th>
						<th>Procent</th>
						<th></th>
						<th></th>
					</tr>
				</tfoot>
				<tbody>
					{% for summaryNumber in summaryNumbersData %}
						<tr>
							<td>{{ summaryNumber.name }}</td>
							<td>{{ summaryNumber.numbers }}</td>
							<td>
								<a href="{{ path('admin_summary_numbers_edit' , { 'id': summaryNumber.id }) }}" class="btn btn-success">Edycja</a>
							</td>
							<td>
								<a href="{{ path('admin_summary_numbers_delete' , { 'id': summaryNumber.id }) }}" class="btn btn-danger">Usuń</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% endblock %}
